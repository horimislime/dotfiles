KEXT_PATH=/System/Library/Extensions/AppleUSBTopCase.kext/Contents/PlugIns/AppleUSBTCKeyboard.kext/

case "$1" in
     on)
     sudo kextload $KEXT_PATH
     echo "Internal keyboard will be activated in 3sec..."
     sleep 3
     echo "Activated."
     ;;

     off)
     sudo kextunload $KEXT_PATH
     echo "Internal keyboard disabled."
     ;;

     *)
     echo "Usage: switch-kb [on|off]"
     ;;
esac
exit 0