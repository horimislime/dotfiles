{
    "name": "Dev Environment",
    "image": "mcr.microsoft.com/vscode/devcontainers/base",
    "extensions": [
        "eamodio.gitlens",
        "oderwat.indent-rainbow",
        "visualstudioexptteam.vscodeintellicode",
        "github.copilot"
    ],
    "settings": {
        "terminal.integrated.profiles.linux": {
            "zsh (login)": {
                "path": "zsh",
                "args": [
                    "-l"
                ]
            }
        }
    },
    "postCreateCommand": "setup.sh"
}