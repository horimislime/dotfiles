[difftool.latex]
        cmd = ~/bin/git-latexdiff "$LOCAL" "$REMOTE"
[difftool]
        prompt = false
[alias]
	wdiff = diff --color-words
	pbcopy = !printf "$1" | pbcopy
        ldiff = difftool -t latex 
	st = status
	l = log
	pu = push origin 
	c = commit
	cb = checkout -b 
	ch = checkout 
	branches = branch -a
	p = !git push origin `git rev-parse --abbrev-ref HEAD`
	pick = cherry-pick -rn
	pbcopy = !printf "$1" | pbcopy
	j = !hub browse

[core]
	excludesfile = /Users/horimislime/.gitignore_global
	editor = vim

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[include]
	path = ~/.gitconfig.local

#[init]
#	templatedir = ~/.git_template

[user]
	name = horimislime
	email = horimislime@gmail.com
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[github]
	user = horimislime
[ghi]
	token = !security find-internet-password -a  -s github.com -l 'ghi token' -w
[git-up "fetch"]
	all = true
