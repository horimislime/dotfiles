[difftool.latex]
        cmd = ~/bin/git-latexdiff "$LOCAL" "$REMOTE"
[difftool]
        prompt = false
[alias]
	wdiff = diff --color-words
	pbcopy = !printf "$1" | pbcopy
	ldiff = difftool -t latex
	s = stash
	po = pop
	stat = status -sb
	l = log --oneline
	pu = push origin 
	c = commit
	cb = checkout -b 
	ch = checkout 
	p = !git push origin `git rev-parse --abbrev-ref HEAD`
	pick = cherry-pick -rn
	pr-branch = "!f() { git rev-parse --abbrev-ref $(git name-rev --name-only $(git ls-remote origin refs/pull/$1/head | cut -f1)) | sed s/^origin\\\\///; }; f"
	top = !hub browse
	prs = !hub-pr list
	cur-pr = browse-remote --pr
	issues = !ghi list

[core]
	excludesfile = /Users/horimislime/.gitignore_global
	editor = "emacsclient -t"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[include]
	path = ~/.gitconfig.local

#[init]
#	templatedir = ~/.git_template

[user]
	name = horimislime
	email = horimislime@gmail.com
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[github]
	user = horimislime
[ghi]
	token = !security find-internet-password -a  -s github.com -l 'ghi token' -w
[git-up "fetch"]
	all = true
