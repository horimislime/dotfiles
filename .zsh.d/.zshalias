#========================================
#Aliaes
#========================================

# inherit user defined variables in sudo
alias sudo='sudo -E '

#less options
export LESS=' -M -N -Q -R --tabs=4 --no-init --ignore-case'

#Color for each file type
#alias ls='RED ls -GwF'
alias sl='ls'
alias ll='ls -l'
alias lla='ls -la'

alias grep='grep --color=auto'
alias o='open'
alias paste='pbpaste'
alias tarc='tar -czvf'
alias tarx='tar -zxvf'
alias reloadrc='source ~/.zshrc'
alias g='git'
alias h='hub'
alias ls="ls -G"
alias gls="gls --color"